<Window x:Class="HoneyPot.SceneCreator.GUI.Selector.Selector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HoneyPot.SceneCreator.GUI.Selector"
        mc:Ignorable="d"
        Title="Selector" Height="450" Width="800" x:Name="Window">
    <Grid>
        <ListBox x:Name="ListBox" SelectedItem="{Binding ElementName=Window, Path=Selected}">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type local:ISelectable}">
                    <StackPanel>
                        <Image Source="{Binding ResourcePath}"></Image>
                        <TextBlock Text="{Binding Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
